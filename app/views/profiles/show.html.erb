<h1><%= @rick.username %></h1>
<% if @rick.photo.attached? %>
  <%= cl_image_tag @rick.photo.key, transformation: { width: 80, height: 80, crop: :fill, gravity: :face, radius: 'max' } %>
<% end %>
<p><%= @rick.bio %></p>
<%= link_to 'Back', :back, class:'btn btn-primary' %>
<%= link_to "Edit your Profile", edit_profile_path(@rick), class:'btn btn-primary' %>
