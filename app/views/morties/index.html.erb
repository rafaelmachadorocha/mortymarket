<div class="banner">
  <div class="container">
    <h1>Get rich, Rick!</h1>
    <p>Sell your Morty and make money.</p>
  </div>
</div>
<div class="container p-5">
  <div>
    <%= form_tag morties_path, method: :get, class: 'form-inline' do %>
    <%= text_field_tag :search, params[:search], class: 'form-control', placeholder: 'Find a Morty' %>
    <%= submit_tag 'Search', class: 'btn btn--green'%>
    <% end %>
  </div>
  <div class="row mt-3">
    <% @morties.each do |morty| %>
      <div class="col-12 col-md-6 col-lg-4">
      <%= link_to morty_path(morty) do %> 
        <div class="card-trip mt-3">
          <% if morty.photo.attached? %>
              <%= cl_image_tag morty.photo.key, class: 'card-trip-user', crop: :fill, gravity: :face  %>
            <% else %>
              <%= image_tag 'Morty3.png', class: 'card-trip-user' %>
            <% end %>
          <div class="card-trip-infos">
            <div>
              <h2><%= morty.title %></h2>
              <% morty.rarity.times do %>
                <i class="far fa-gem rarity-icon"></i>
              <% end %>
            </div>
            <h2 class="card-trip-pricing">à¸¿<%= morty.price %></h2>
            <% if morty.seller_rick.photo.attached? %>
              <%= cl_image_tag morty.seller_rick.photo.key, class: 'card-trip-user avatar', crop: :fill, gravity: :face %>
            <% else %>
              <%= image_tag 'avatar_rick.png', class: 'card-trip-user avatar' %>
            <% end %>
          </div>
        </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>     


