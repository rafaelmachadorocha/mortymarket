<!DOCTYPE html>
<html>
  <head>
    <title>MortyMarket</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/css?family=Archivo+Black&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Archivo:700&display=swap" rel="stylesheet">
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>
  <body>
    <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
       <h2>Morty Market</h2>
        <% if rick_signed_in? %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <% if current_rick.photo.attached? %>
              <%= cl_image_tag current_rick.photo.key, class: 'avatar dropdown-toggle', id: "navbarDropdown", data: { toggle: "dropdown"  }, aria: { haspopup: "true", expanded: "false"} %>
            <% else %>
              <%= image_tag 'avatar_rick.png', class: 'avatar dropdown-toggle', id: "navbarDropdown", data: { toggle: "dropdown"  }, aria: { haspopup: "true", expanded: "false"} %>
            <% end %>  
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "My profile", profile_path(current_rick), class: 'dropdown-item' %>
              <%= link_to "Sell a morty", new_morty_path, class: 'dropdown-item' %>
              <%= link_to "Sign out", destroy_rick_session_path, method: :delete, class: 'dropdown-item' %>
            </div>
          </div>
        <% else %>
          <%= link_to "Sign in", new_rick_session_path, class: 'btn btn-primary' %>
        <% end %>
    </div>
    <div class="masthead" id="animate-area">
    </div>
    <%= yield %>
    <p class="alert"><%= alert %></p>
    <p class="notice"><%= notice %></p>
  </body>
</html>
